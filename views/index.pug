extends layout

block body
  main
    h2 Welcome to HotBot
    h2 Current status
    div(id='state')
      p
        | Main state:&nbsp;
        span(id='main-state', class='state')
      p
        button(id='reset-button' disabled=true) Reset Error
      p
        input(type='checkbox' name='pause-button' id='pause-button')
        label(for='pause-button') Pause for 3 Hours
      p
        | Circulation:&nbsp;
        span(id='circulation-state', class='state')
      p
        | Water last flowing at:&nbsp;
        span(id='flow-last-good')
    h2 Readings
    div(id='readings')
      p
        | Temp:&nbsp;
        span(id='temp-data' class='inaccurate-reading')
          span(id='temp-reading')
          | &nbsp;&deg;C
      p
        | ORP:&nbsp;
        span(id='orp-data' class='inaccurate-reading')
          span(id='orp-reading')
          | &nbsp;mV&nbsp;(
          span(id='orp-info' class='info')
          | )
      p
        | pH:&nbsp;
        span(id='ph-data' class='inaccurate-reading')
          span(id='ph-reading')
          | &nbsp;(
          span(id='ph-info' class='info')
          | )
      p
        | Flow:&nbsp;
        span(id='flow-data' class='inaccurate-reading')
          span(id='flow-reading')
          | &nbsp;Hz&nbsp;(
          span(id='flow-info' class='info')
          | )
    div(id='history', style='width:100%;')
      canvas(id='history-chart')
    h2 Recent events
    div(id='log-messages')
      p
        table(class='log-table', border='1')
          thead
            tr
              th Time
              th Log Level
              th Message
          tbody(id='log-table-body')


  script(src='build/moment.min.js')
  script(src='build/Chart.min.js')
  script(src='index.js')

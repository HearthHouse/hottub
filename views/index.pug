extends layout

block body
  main
    h1 Current status:
    div(id='readings' class='inaccurate-reading')
      p
        | Temp:&nbsp;
        span(id='temp-reading' class='reading')
          | #{temp}
      p
        | ORP:&nbsp;
        span(id='orp-reading' class='reading')
          | #{orp}
      p
        | pH:&nbsp;
        span(id='ph-reading' class='reading')
          | #{ph}
      p
        | status:&nbsp;
        span(id='status-field')
          | #{status}

  script(src='index.js')
